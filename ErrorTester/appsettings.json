  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Email" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "patata.txt",
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "FromEmail": "alvarocarabante@gmail.com",
          "ToSender": "rocio@gmail.com",
          "restrictedToMinimumLevel": "Fatal"
        }
      }
    ]
  }
}
